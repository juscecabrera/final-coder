<div class="box">
    <h1>Productos</h1>
    <div class="products-box">
        {{#each products}}
            <div class="product-card" id="product-card">
                <h3>{{this.title}}</h3>
                
                <p>Descripción: {{this.description}}</p>
                <p>Precio: $ {{this.price}}</p>
                <p>Stock: {{this.stock}}</p>
                <form method="post" action="/api/cart/{{this.cid}}/product/{{this.id}}">
                    <button type="submit">Add to cart</button>
                </form>
            </div>
        {{/each}}
        <p>Página: {{this.page}}</p>
    </div>
    <div>
        {{#if hasPrevPage}}
            <a href={{this.prevLink}}><< Anterior</a>
        {{/if}}
    </div>
    <br>
    <div>
        {{#if hasNextPage}}
            <a href={{this.nextLink}}>Siguiente >></a>
        {{/if}}
    </div>
    <a href="/current">Home</a>
</div>
<style>
    .box {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .products-box {
        display: flex;
    }
    .product-card {
        border: 1px solid black;
        margin: 0 1rem;
        padding: 1rem;
    }
    button {
        margin-top: 1rem;
    }
</style>